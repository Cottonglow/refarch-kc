FROM ibmjava:8-sdk

MAINTAINER "IBM Cloud Architecture Solution Engineering team"

RUN apt-get update && \
 apt-get -y upgrade && \
 apt-get install -y vim wget curl git maven

 # attach volumes
VOLUME /volume/gitrepo

# create working directory
RUN mkdir -p /local/gitrepo
WORKDIR /local/gitrepo

# run terminal
CMD ["/bin/bash"]
