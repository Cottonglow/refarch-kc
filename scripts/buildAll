#!/bin/bash
export LDFLAGS=-L/usr/local/opt/openssl/lib
export CPPFLAGS=-I/usr/local/opt/openssl/include
if [[ $PWD = */scripts ]]; then
 cd ..
fi

if [[ $# -eq 0 ]];then
  kcenv="local"
else
  kcenv=$1
fi
cd ../refarch-kc-ms/fleet-ms/
./scripts/buildDocker.sh $kcenv

cd ../voyages-ms
./scripts/buildDocker.sh $kcenv

cd ../../refarch-kc-order-ms/order-command-ms
./scripts/buildDocker.sh $kcenv

cd ../order-query-ms
./scripts/buildDocker.sh $kcenv

cd ../../refarch-kc-ui
./scripts/buildDocker.sh $kcenv
